# Neo4j Environment Configuration
# Copy to .env and update with actual values

# Neo4j Authentication
NEO4J_PASSWORD=your_secure_password_here

# Neo4j URIs
NEO4J_URI=bolt://localhost:7687
NEO4J_HTTP_URI=http://localhost:7474

# Neo4j Credentials
NEO4J_USER=neo4j

# Memory Configuration (adjust based on server capacity)
# For 32GB RAM server:
NEO4J_HEAP_INITIAL=8g
NEO4J_HEAP_MAX=8g
NEO4J_PAGE_CACHE=16g

# For 64GB RAM server:
# NEO4J_HEAP_INITIAL=16g
# NEO4J_HEAP_MAX=16g
# NEO4J_PAGE_CACHE=40g

# Performance Tuning
NEO4J_TRANSACTION_TIMEOUT=30s
NEO4J_BOLT_THREAD_POOL_MIN=50
NEO4J_BOLT_THREAD_POOL_MAX=400

# Monitoring
NEO4J_METRICS_ENABLED=true
NEO4J_PROMETHEUS_ENABLED=true
NEO4J_PROMETHEUS_PORT=2004

# Backup Configuration
NEO4J_BACKUP_DIR=/backups/neo4j
NEO4J_BACKUP_RETENTION_DAYS=30
